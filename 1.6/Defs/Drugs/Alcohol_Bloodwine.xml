    <stackLimit>25</stackLimit>
    <statBases>
      <DeteriorationRate>0.4</DeteriorationRate>
      <MarketValue>15</MarketValue>
      <Mass>0.7</Mass>
      <Flammability>0.2</Flammability>
      <Nutrition>0.09</Nutrition>
    </statBases>
    <ingestible>
