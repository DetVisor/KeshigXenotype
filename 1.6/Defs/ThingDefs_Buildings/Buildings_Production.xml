<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BuildingBase">
		<defName>DV_BloodwineBarrel</defName>
		<label>gorewine barrel</label>
		<description>A cheap container meant for storing water retrofitted to be air tight for short-term fermenting.</description>
		<inspectorTabs>
			<li>PipeSystem.ITab_Processor</li>
		</inspectorTabs>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/Production/BloodwineBarrel</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.2,1.2)</drawSize>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<thingCategories>
			<li>BuildingsProduction</li>
		</thingCategories>
		<costList>
			<WoodLog>40</WoodLog>
		</costList>
		<altitudeLayer>Building</altitudeLayer>
		<rotatable>true</rotatable>
		<neverMultiSelect>true</neverMultiSelect>
		<uiIconScale>0.8</uiIconScale>
		<fillPercent>0.5</fillPercent>
		<useHitPoints>True</useHitPoints>
		<statBases>
			<Mass>2</Mass>
			<WorkToBuild>250</WorkToBuild>
			<MaxHitPoints>30</MaxHitPoints>
			<Flammability>1</Flammability>
		</statBases>
		<tickerType>Rare</tickerType>
		<size>(1,1)</size>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<surfaceType>Item</surfaceType>
		<researchPrerequisites>
			<li>Brewing</li>
		</researchPrerequisites>
		<comps>
			<li Class="PipeSystem.CompProperties_AdvancedResourceProcessor">
				<notWorkingKey>VCE_SodaFountainNotWorking</notWorkingKey>
				<processes>
					<li>DV_GoremustToWine</li>
				</processes>
				<progressBarOffset>(0,0,0.05)</progressBarOffset>
				<hideSettings>true</hideSettings>
			</li>
		</comps>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<minifiedDef>MinifiedThing</minifiedDef>
	</ThingDef>
</Defs>
